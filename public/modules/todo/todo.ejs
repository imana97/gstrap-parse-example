<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">My todo</h3>
            </div>
            <div class="panel-body">
                <strong>Today is <%= new Date().toLocaleString() %></strong>
            </div>
            <table class="table table-hover" id="todo-items">
                <% todos.forEach(function(item){ %>
                <tr id="<%= item.id %>">
                    <td width="10px;">
                        <% if (item.get('completed')) { %>
                        <input class="form-group todo-checkbox" type="checkbox" name="todo-checkbox" checked>
                        <% } else { %>
                        <input class="form-group todo-checkbox" type="checkbox" name="todo-checkbox">
                        <% } %>
                    </td>

                    <td style="text-decoration: <%= item.get('completed')?'line-through;':'none;' %>">
                        <%= item.get('name') %>
                    </td>

                    <td>
                        <button type="button" class="btn btn-sm item-remove pull-right"><span
                                    class="glyphicon glyphicon-remove"></span>
                        </button>
                    </td>
                </tr>
                <% }); %>
            </table>
            <input type="text" class="form-control bg-primary" id="new-todo-item" placeholder="new todo...">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="page-header">
            <h1>{{role}}
                <small> roles</small>
            </h1>
        </div>
        <form class="form-inline" role="form">

            <div class="form-group">
                <label class="sr-only" for="">label</label>
                <input type="text" class="form-control" name="" id="txt-admin-new-role-role"
                       placeholder="insert a role name">
            </div>

            <button type="button" id="btn-admin-new-role-role" class="btn btn-primary"><span
                    class="glyphicon glyphicon-plus"></span> Add new role
            </button>
        </form>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Role name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody id="table-role-roles">
            {{#roles}}
                <tr id="{{id}}">
                    <td>{{attributes.name}}</td>
                    <td>
                        <button type="button" class="btn btn-link remove-role">Remove</button>
                    </td>
                </tr>
            {{/roles}}
            </tbody>
        </table>

    </div>
</div>